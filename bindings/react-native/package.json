{
  "name": "@spacesprotocol/react-native-libveritas",
  "version": "0.1.0",
  "description": "React Native bindings for libveritas - stateless verification for Bitcoin handles",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "files": [
    "src",
    "lib",
    "cpp",
    "ios",
    "android",
    "*.podspec",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/node_modules"
  ],
  "scripts": {
    "ubrn:ios": "ubrn build ios --and-generate",
    "ubrn:android": "ubrn build android --and-generate",
    "ubrn:clean": "ubrn clean",
    "prepare": "bob build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spacesprotocol/libveritas.git",
    "directory": "bindings/react-native"
  },
  "author": "spacesprotocol",
  "license": "MIT",
  "homepage": "https://github.com/spacesprotocol/libveritas#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "react-native-builder-bob": "^0.30.0",
    "typescript": "^5.0.0",
    "uniffi-bindgen-react-native": "^0.29.3-1"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": ">=0.74"
  },
  "codegenConfig": {
    "name": "RNLibveritasSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      ["commonjs", { "copyFlow": false }],
      "module",
      "typescript"
    ]
  }
}
